<!DOCTYPE html>
<html lang="en">

<head>
  <title>Profile</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/profile.css" />

  <!-- Javascript -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/index.js"></script>
  <script defer src="/scripts/maps.js"></script>
  <script defer src="/scripts/profile.js"></script>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <!-- External Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;600&family=Pacifico&display=swap" rel="stylesheet">

  <!-- External Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Leaflet's CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css"
   integrity="sha512-hoalWLoI8r4UszCkZ5kL8vayOGVae1oxXe/2A4AO6J9+580uKHDO3JdHb7NzwwzK5xr/Fs0W40kiNHxM9vyTtQ=="
   crossorigin=""/>

  <!-- Make sure you put this AFTER Leaflet's CSS -->
  <script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js"
  integrity="sha512-BB3hKbKWOc9Ez/TAwyWxNXeoV9c1v6FIeYiBieIWkpLjauysF18NzgR1MBNBXf8/KABdlkX68nAhlwcDFLGPCQ=="
  crossorigin=""></script>

</head>

<body>
  <%- include('partials/_nav') %>
  <main>
    <div class="bg-white shadow rounded overflow-hidden">
      <div class="px-4 pt-0 pb-4" style="background-color: rgba(216,207,200,255);">
          <div class="media align-items-end profile-header" style="padding-top: 2em;">
              <div class="profile mr-3"><img src="/images/profile_photo.png" width="150" class="rounded mb-2 img-thumbnail"></div>
              <div class="media-body mb-5 text-white" style="padding-left: 2em;">
                  <h4 class="mt-0 mb-0"><%= user.username %></h4>
                  <p class="small mb-4"> <i class="fa fa-map-marker mr-2"></i><%= user.city %></p>
              </div>
          </div>
      </div>

      <div class="bg-light p-4 d-flex justify-content-end text-center">
          <ul class="list-inline mb-0">
              <li class="list-inline-item">
                  <h5 class="font-weight-bold mb-0 d-block"><%= userFavs.length %></h5><small class="text-muted"> <i class="fa fa-picture-o mr-1"></i>Favorites</small>
              </li>
              <li class="list-inline-item">
                  <h5 class="font-weight-bold mb-0 d-block"><%= userMaps.length %></h5><small class="text-muted"> <i class="fa fa-user-circle-o mr-1"></i>Contributions</small>
              </li>
          </ul>
      </div>
  </main>
<br/>
  <!-- Maps Container -->
<div class="profile-cards">
  <div class="row">
    <div class="column">
      <div class="cardOne">

        <ul class="list-group">
          <li class="list-group-item"><button style="all: unset;" id="fav-button" type="submit">Favorites</button></li>
          <li class="list-group-item"><button style="all: unset;" id="contri-button" type="submit">Contributions</button></li>
          <li class="list-group-item"><button style="all: unset;" id="create-button" type="submit">Create New Map</button></li>
        </ul>

      </div>
    </div>


    <div class="column" id="fav-card">
      <div class="card">

        <p id="maps-title">Favorites <i class="fa-solid fa-sort-down"></i></p>
      <% for (let favMapIndex in userFavs) { %>
        <div class="card-body">

        <div id="map<%= favMapIndex %>" style="height: 200px"></div>
        <input class="fav-id" type="hidden" value="<%= favMapIndex %>">
        <input class="fav-lat" type="hidden" value="<%= userFavs[favMapIndex].latitude %>">
        <input class="fav-lon" type="hidden" value="<%= userFavs[favMapIndex].longitude %>">
        <p class="card-text"><b>Map:</b> <%= userFavs[favMapIndex].title %><br><b>City:</b> <%= userFavs[favMapIndex].city %><br><b>Created By:</b> <%= userFavs[favMapIndex].username %></p>
        <table>
            <form method="GET" action="/maps/<%= userFavs[favMapIndex].id %>/">
              <button type="submit" class="btn btn-sm btn-outline-secondary">View <i class="fa-solid fa-magnifying-glass"></i></button>
            </form> &nbsp
            <form method="GET" action="/maps">
              <button type="submit" class="btn btn-sm btn-outline-secondary">Edit <i class="fa-solid fa-pen-to-square"></i></i></button>
            </form> &nbsp
            <form method="POST" action="/maps/<%= userFavs[favMapIndex].id %>">
              <button type="submit" class="btn btn-sm btn-outline-secondary">Favorite <i style="color: red;" class="fa-solid fa-heart"></i></button>
            </form> &nbsp
            <form method="POST" action="/maps/<%= userFavs[favMapIndex].id %>?_method=DELETE">
              <button type="submit" class="btn btn-sm btn-outline-secondary">Delete <i class="fa-solid fa-trash-can"></i></button>
            </form>
          </table>
        </div>
        <% } %>
      </div>
    </div>


    <div class="column" id="contri-card">
      <div class="card">

        <p id="maps-title">Contributions <i class="fa-solid fa-sort-down"></i></p>
          <% for (let mapIndex in userMaps) { %>
        <div class="card-body">

          <div id= "map<%= mapIndex %>" style="height: 200px"></div>
          <input class="contri-id" type="hidden" value="<%= mapIndex %>">
          <input class="contri-lat" type="hidden" value="<%= userMaps[mapIndex].latitude %>">
          <input class="contri-lon" type="hidden" value="<%= userMaps[mapIndex].longitude %>">
            <p class="card-text"><b>Map:</b> <%= userMaps[mapIndex].title %><br><b>City:</b> <%= userMaps[mapIndex].city %><br><b>Created By:</b> <%= userMaps[mapIndex].username %></p>
          <table>
            <form method="GET" action="/maps/<%= userMaps[mapIndex].id %>/">
              <button type="submit" class="btn btn-sm btn-outline-secondary">View <i class="fa-solid fa-magnifying-glass"></i></button>
            </form> &nbsp
            <form method="GET" action="/maps">
              <button type="submit" class="btn btn-sm btn-outline-secondary">Edit <i class="fa-solid fa-pen-to-square"></i></i></button>
            </form> &nbsp
            <form method="POST" action="/maps/<%= userMaps[mapIndex].id %>/">
              <button type="submit" class="btn btn-sm btn-outline-secondary">Favorite <i class="fa-solid fa-heart"></i></button>
            </form> &nbsp
            <form method="POST" action="/maps">
              <button type="submit" class="btn btn-sm btn-outline-secondary">Delete <i class="fa-solid fa-trash-can"></i></button>
            </form>
          </table>
        </div>
        <% } %>
      </div>
    </div>



    <div class="column" id="create-card">
      <div class="card">

        <div class="create-container">
        <form class="form" method="POST" action="/profile">
          <div class="form-group mb-2">
            <label for="title">Title:</label>
            <input style="width: 20em" class="form-control" type="text" name="title" placeholder="Enter map title...">
          </div>

          <div class="form-group mb-2">
            <label for="province">Province:</label><br/>
            <input style="width: 20em; height: 2.5em;" class="form-control" type="text" name="province" placeholder="Enter province...">

          </div>

          <div class="form-group mb-2">
            <label for="city">City:</label><br/>
            <input style="width: 20em; height: 2.5em;" class="form-control" type="text" name="city" placeholder="Enter city...">
          </div>

          <button type="submit" class="btn btn-info">Create Map</button>
        </form>
      </div>

      </div>
    </div>


  </div>
</div>

<br/>




</body>

</html>
